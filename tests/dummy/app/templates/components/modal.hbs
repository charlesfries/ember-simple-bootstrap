{{! @glint-nocheck }}

{{page-title "Modal"}}

<h1 class="title">Modal</h1>

<div class="example">
  {{! BEGIN-SNIPPET modal-example }}

  <Bs::Button {{on "click" (fn (mut this.showModal) true)}}>Launch demo modal</Bs::Button>

  {{#if this.showModal}}
    <Bs::Modal
      @title="Modal title"
      @onClose={{fn (mut this.showModal) false}}
      as |modal|
    >
      <modal.body>
        <p>Modal body text goes here.</p>
      </modal.body>
      <modal.footer>
        <Bs::Button
          @color="secondary"
          {{on "click" (fn (mut this.showModal) false)}}
        >Cancel</Bs::Button>
        {{! @glint-ignore }}
        <Bs::Button @color="primary" {{on "click" (fn (mut this.xyz))}}>Save
          changes</Bs::Button>
      </modal.footer>
    </Bs::Modal>
  {{/if}}

  {{! END-SNIPPET }}
</div>

