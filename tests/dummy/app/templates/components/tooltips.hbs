{{! @glint-nocheck }}

{{page-title "Tooltips"}}

<h1 class="title">Tooltips</h1>

<div class="example">
  {{! BEGIN-SNIPPET tooltip-example }}

  <a href="#" {{tooltip "Tooltip on top"}}>
    Tooltip on top
  </a>
  <Bs::Button {{tooltip "Tooltip on top"}} {{on "click" this.go}}>
    Tooltip on top
  </Bs::Button>
  <Bs::Button
    {{tooltip "Tooltip on right" placement="right"}}
    {{on "click" this.go}}
  >
    Tooltip on right
  </Bs::Button>
  <Bs::Button
    {{tooltip "<em>Tooltip</em> <u>with</u> <b>HTML</b>" html=true}}
    {{on "click" this.go}}
  >
    Tooltip with HTML
  </Bs::Button>

  {{! END-SNIPPET }}
</div>

<Snippet @name="tooltip-example" />