<nav ...attributes>
	<ul class="pagination mb-0">
		<li class="page-item {{unless this.canPrev "disabled"}}">
			<a class="page-link" href="#" {{on "click" @onPrevious}}>Previous</a>
		</li>
		{{#each this.pages as |page index|}}
			{{#if (and (gte index this.range.min) (lte index this.range.max))}}
				<li class="page-item {{if (eq @curPage index) "active" }}"><a class="page-link" href="#" {{on "click" (fn @onSelect index)}}>{{inc index}}</a></li>
			{{/if}}
		{{/each}}
		<li class="page-item {{unless this.canNext "disabled"}}">
			<a class="page-link" href="#" {{on "click" @onNext}}>Next</a>
		</li>
	</ul>
</nav>